package org.system.service.iface.content;

import java.util.List;
import java.util.Map;

import org.system.entity.content.Content;

public interface IContentService {
	/**
	 * 新增短信内容
	 * 
	 * @param content
	 * @return int
	 */
	public int insertContent(Content content);

	/**
	 * 删除短信内容
	 * 
	 * @param content
	 * @return int
	 */
	public int deleteContent(Content content);

	/**
	 * 删除短信内容通过模板类型id
	 * 
	 * @param content
	 * @return int
	 */
	public int deleteContentByContentTypeId(Content content);

	/**
	 * 修改短信内容
	 * 
	 * @param content
	 * @return int
	 */
	public int updateContent(Content content);

	/**
	 * 短信内容细节
	 * 
	 * @param content
	 * @return Map<String,Object>
	 */
	public Map<String, Object> getContentDetail(Content content);

	/**
	 * 检查短信内容唯一性
	 * 
	 * @param content
	 * @return Map<String,Object>
	 */
	public Map<String, Object> getContentByFiled(Content content);

	/**
	 * 所有短信内容列表
	 * 
	 * @param content
	 * @return List<Map<String,Object>>
	 */
	public List<Map<String, Object>> getContents(Content content);

}
