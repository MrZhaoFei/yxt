package org.system.service.impl.user;

import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;
import org.system.entity.user.Follow;
import org.system.mapper.user.FollowMapper;
import org.system.service.iface.user.IFollowService;

@Service
public class FollowService implements IFollowService {
	@Resource
	private FollowMapper mapper;

	@Override
	public Map<String, Object> getFollowByFild(Follow follow) {
		return mapper.checkExists(follow);
	}

	@Override
	public int insertFollow(Follow follow) {
		return mapper.insert(follow);
	}

	@Override
	public int updateFollow(Follow follow) {
		return mapper.update(follow);
	}

	@Override
	public List<Map<String, Object>> getFollowList(Follow follow) {
		return mapper.queryAll(follow);
	}

	@Override
	public Map<String, Object> getFollowDetail(Follow follow) {
		return mapper.queryOne(follow);
	}
}
