<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.content.ContentMapper">
<!-- 查询列表 -->
<select id="queryAll" parameterType="org.system.entity.content.Content" resultType="map">
	select c.id contentId,c.name contentName,c.remark remark,c.content_type_id contentTypeId  from content c
	left join content_type ct on c.id=ct.id
	<where>
		<if test="contentTypeId!=null ">
		 	c.content_type_id=#{contentTypeId}
		</if>
	</where>
</select> 
</mapper>