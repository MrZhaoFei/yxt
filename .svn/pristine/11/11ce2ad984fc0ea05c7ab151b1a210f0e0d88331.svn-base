package org.system.entity.user;

import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import javax.validation.constraints.NotNull;

import org.core.entity.BaseEntity;
import org.hibernate.validator.constraints.NotBlank;
import org.utils.spring.Groups;

public class User extends BaseEntity {

	public interface LoginForWechat {
	};

	public interface WechatBind {
	};

	public interface WechatUnBind {
	};

	public interface DocPassword {
	};
	public interface updateUserByDoctor {
	};

	@NotNull(message = "{user.id.notnull.valid}", groups = { User.updateUserByDoctor.class })
	private Integer id;

	private Integer registerSourceId;

	private String name;

	@NotBlank(message = "{phone.notblank.valid}", groups = { WechatBind.class, Groups.Insert.class,
			Groups.Other.class })
	private String phone;

	@NotBlank(message = "{unionId.notblank.valid}", groups = { Groups.Insert.class })
	private String unionId;

	private String password;
	@NotBlank(message = "{wechatId.notblank.valid}", groups = { LoginForWechat.class, WechatBind.class,
			WechatUnBind.class, Groups.Insert.class })
	private String wechatId;

	private Date registerDate;

	private String remark;

	@NotBlank(message = "{wxDocPwd.notblank.valid}", groups = { DocPassword.class })
	private String wxDocPwd;

	private UserDetail userDetail;
	@NotBlank(message = "{ip.notblank.valid}", groups = { LoginForWechat.class})
	private String ip;
	
	
	private String userTypeTag;
	
	public List<String> getTags() {
		if (this.userTypeTag != null) {
			String[] str = this.userTypeTag.split(";");
			List<String> temp = new ArrayList<>();
			for (int i = 0; i < str.length; i++) {
				temp.add(";"+String.valueOf(str[i])+";");
			}
			return temp;
		}
		return null;
	}
	
	public String getUserTypeTag() {
		return userTypeTag;
	}

	public void setUserTypeTag(String userTypeTag) {
		this.userTypeTag = userTypeTag;
	}

	public String getIp() {
		return ip;
	}

	public void setIp(String ip) {
		this.ip = ip;
	}

	public String getWxDocPwd() {
		return wxDocPwd;
	}

	public void setWxDocPwd(String wxDocPwd) {
		this.wxDocPwd = wxDocPwd;
	}

	public String getUnionId() {
		return unionId;
	}

	public void setUnionId(String unionId) {
		this.unionId = unionId;
	}

	public Integer getId() {
		return id;
	}

	public void setId(Integer id) {
		this.id = id;
	}

	public Integer getRegisterSourceId() {
		return registerSourceId;
	}

	public void setRegisterSourceId(Integer registerSourceId) {
		this.registerSourceId = registerSourceId;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getPhone() {
		return phone;
	}

	public void setPhone(String phone) {
		this.phone = phone;
	}

	public String getPassword() {
		return password;
	}

	public void setPassword(String password) {
		this.password = password;
	}

	public String getWechatId() {
		return wechatId;
	}

	public void setWechatId(String wechatId) {
		this.wechatId = wechatId;
	}

	public Date getRegisterDate() {
		return registerDate;
	}

	public void setRegisterDate(Date registerDate) {
		this.registerDate = registerDate;
	}

	public String getRemark() {
		return remark;
	}

	public void setRemark(String remark) {
		this.remark = remark;
	}

	public UserDetail getUserDetail() {
		return userDetail;
	}

	public void setUserDetail(UserDetail userDetail) {
		this.userDetail = userDetail;
	}

	@Override
	@NotNull(message = "{page.empty}", groups = { Groups.Select.class })
	public Integer getPage() {
		return super.getPage();
	}

	@Override
	@NotNull(message = "{rows.empty}", groups = { Groups.Select.class })
	public Integer getRows() {
		return super.getRows();
	}
}