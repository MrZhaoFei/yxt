package org.system.controller.iface.doctor;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.doctor.Doctor;
import org.utils.spring.Groups;

@RequestMapping("/admin")
public interface IDoctorController {

	
	

	/**
	 * 新增
	 * @param doctor
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/doctor/insert", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("doctor:insert")
	public Map<String, Object> insertDoctor(@Validated({ Groups.Insert.class }) Doctor doctor, BindingResult result);

	
	/**
	 * 修改
	 * @param id
	 * @param doctor
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/doctor/{id}/update", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("doctor:update")
	public Map<String, Object> updateDoctor(@PathVariable("id") Integer id,
			@Validated({ Groups.Update.class }) Doctor doctor, BindingResult result);
	
	
	/**
	 * 所有的
	 * @param Doctor
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/doctor", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("doctor:list")
	public Map<String, Object> getDoctorList(@Validated({ Groups.Select.class }) Doctor doctor, BindingResult result,HttpServletRequest req);

	
	/**
	 * 单个信息
	 * @param doctor
	 * @param id
	 * @return
	 */
	@RequestMapping(value = "/doctor/{id}/detail", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("doctor:detail")
	public Map<String, Object> getDoctorDetail(@PathVariable("id") Integer id, Doctor doctor);
	
	
	/**
	 * 删除
	 * @param doctor
	 * @param id
	 * @return
	 */
	@RequestMapping(value = "/doctor/{id}/delete", method = RequestMethod.DELETE)
	@ResponseBody
	@RequiresPermissions("doctor:delete")
	public  Map<String, Object> deleteDoctor(@PathVariable("id") Integer id, Doctor doctor);
	
	
	/*@RequestMapping(value = "/doctor/{id}/deta", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("doctor:deta")
	public Map<String, Object> getDoctorDetailByDoctorId(@PathVariable("id") Integer id, Doctor doctor);
	
	
	/**
	 * 获取医生最大的id 值
	 * @param doctor
	 * @return
	 */
	@RequestMapping(value = "/doctorMax", method = RequestMethod.GET)
	@ResponseBody
	public int getDoctorMaxId(@Validated({ Groups.Select.class }) Doctor doctor);

}
