package org.system.controller.iface;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.Department;
import org.utils.spring.Groups;

@RequestMapping("/admin")
public interface IDepartmentController {

	/**
	 * 新增
	 * @param department
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/department/insert", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("department:insert")
	public Map<String, Object> insertDepartment(@Validated({ Groups.Insert.class }) Department department, BindingResult result);

	
	/**
	 * 修改
	 * @param id
	 * @param department
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/department/{id}/update", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("department:update")
	public Map<String, Object> updateDepartment(@PathVariable("id") Integer id,
			@Validated({ Groups.Update.class }) Department department, BindingResult result);
	
	
	/**
	 * 所有的
	 * @param department
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/department", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("department:list")
	public Map<String, Object> getDepartmentList(@Validated({ Groups.Select.class }) Department department, BindingResult result,HttpServletRequest req);

	
	/**
	 * 单个信息
	 * @param id
	 * @param department
	 * @return
	 */
	@RequestMapping(value = "/department/{id}/detail", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("department:detail")
	public Map<String, Object> getDepartmentDetail(@PathVariable("id") Integer id, Department department);
	
	/**
	 * 删除
	 * @param department
	 * @param department
	 * @return
	 */
	@RequestMapping(value = "/department/{id}/delete", method = RequestMethod.DELETE)
	@ResponseBody
	@RequiresPermissions("department:delete")
	public  Map<String, Object> deleteDepartment(@PathVariable("id") Integer id, Department department);
	
	
	/**
	 * 所有的
	 * @param department
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/department/all", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("department:list")
	public Map<String, Object> getDepartmentAllListName(@Validated({ Groups.Select.class }) Department department, BindingResult result);

}
