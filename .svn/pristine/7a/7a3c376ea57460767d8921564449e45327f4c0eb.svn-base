package org.system.controller.impl;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.core.result.ResultCode;
import org.core.result.ResultMap;
import org.springframework.stereotype.Controller;
import org.springframework.validation.BindingResult;
import org.system.Global;
import org.system.controller.iface.ISysCodeRecodsController;
import org.system.entity.SysCodeRecods;
import org.system.message.Message;
import org.system.service.iface.address.ISysCodeRecodsService;

@Controller
public class SysCodeRecodsController implements ISysCodeRecodsController{
      
	@Resource
	private ISysCodeRecodsService sysCodeRecodsService;
	@Override
	public Map<String, Object> getAddressByCode(String pid, SysCodeRecods sysCodeRecods, BindingResult result) {
		
		Map<String, Object> resultMap = new HashMap<>();
		List<Map<String, Object>> dataList = sysCodeRecodsService.getAddressByCode(sysCodeRecods);
		
		if (dataList != null && dataList.size() > 0) {
			resultMap.put(Global.DATA_TOTAL, sysCodeRecods.getTotal());
			resultMap.put(Global.DATA_ROWS, dataList);
			return ResultMap.convertMap(ResultCode.CODE_SUCCESS, resultMap, Message.bundle("query.success"));
		}
		return ResultMap.convertMap(ResultCode.CODE_DATA_EMPTY, Message.bundle("query.empty"));
	}
	
	
	@Override
	public Map<String, Object> getAddressByCodeName(String codeName, SysCodeRecods sysCodeRecods,
			BindingResult result) {
		
		Map<String, Object> resultMap = new HashMap<>();
		List<Map<String, Object>> dataList = sysCodeRecodsService.getAddressByCodeName(sysCodeRecods);
		
		if (dataList != null && dataList.size() > 0) {
			resultMap.put(Global.DATA_TOTAL, sysCodeRecods.getTotal());
			resultMap.put(Global.DATA_ROWS, dataList);
			return ResultMap.convertMap(ResultCode.CODE_SUCCESS, resultMap, Message.bundle("query.success"));
		}
		return ResultMap.convertMap(ResultCode.CODE_DATA_EMPTY, Message.bundle("query.empty"));
	}




	@Override
	public Map<String, Object> getHospitalByCodeName(String codeName, SysCodeRecods sysCodeRecods,
			BindingResult result) {
		Map<String, Object> resultMap = new HashMap<>();
		List<Map<String, Object>> dataList = sysCodeRecodsService.getHospitalByCodeName(sysCodeRecods);
		
		if (dataList != null && dataList.size() > 0) {
			resultMap.put(Global.DATA_TOTAL, sysCodeRecods.getTotal());
			resultMap.put(Global.DATA_ROWS, dataList);
			return ResultMap.convertMap(ResultCode.CODE_SUCCESS, resultMap, Message.bundle("query.success"));
		}
		return ResultMap.convertMap(ResultCode.CODE_DATA_EMPTY, Message.bundle("query.empty"));
	}

}
