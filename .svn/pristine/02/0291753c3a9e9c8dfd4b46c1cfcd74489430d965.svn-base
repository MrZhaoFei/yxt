<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.user.FollowMapper">
<!-- 新增 -->
<insert id="insert" parameterType="org.system.entity.user.Follow" useGeneratedKeys="true" keyProperty="id">
	insert into follow(name) values(#{name})
</insert>
<!-- 修改 -->
<update id="update" parameterType="org.system.entity.user.Follow">
	update follow set id=#{id} 
	<if test="name!=null and name!=''">
		,name=#{name}
	</if>
	where id=#{id}
</update>
<!-- 检查唯一性 -->
<select id="checkExists" parameterType="org.system.entity.user.Follow" resultType="map">
	select id,name from follow where name=#{name}
</select>
<!-- 查询列表 -->
<select id="queryAll" parameterType="org.system.entity.user.Follow" resultType="map">
	select id,name from follow 
	<where>
		<if test="name!=null and name!=''">
			name like CONCAT(CONCAT('%', #{name}), '%')
		</if>
	</where>
</select>
<!-- 查询详情 -->
<select id="queryOne" parameterType="org.system.entity.user.Follow" resultType="map">
	select id,name from follow where id=#{id}
</select> 
</mapper>