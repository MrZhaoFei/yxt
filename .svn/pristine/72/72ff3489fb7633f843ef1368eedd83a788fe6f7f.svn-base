package org.system.controller.iface.service.resp;

import java.util.Map;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.service.resp.TaskType;
import org.utils.spring.Groups;

/**
 * 服务响应类型
 * @author ZF
 *
 */
@RequestMapping(value = { "/common" })
public interface ITaskTypeController {

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param taskType
	 * @param result
	 * @return
	 * @date 2016年3月18日 下午5:30:14
	 * @version 1.0
	 * @description 服务响应类型
	 */
	@RequestMapping(value = "/taskType", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("taskType:insert")
	public Map<String, Object> insertTaskType(@Validated({ Groups.Insert.class }) TaskType taskType,
			BindingResult result);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param taskTypeId
	 * @param taskType
	 * @param result
	 * @return
	 * @date 2016年3月18日 下午5:30:26
	 * @version 1.0
	 * @description 修改服务响应类型
	 */
	@RequestMapping(value = "/taskType/{taskTypeId}", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("taskType:update")
	public Map<String, Object> updateTaskType(@PathVariable("taskTypeId") Integer taskTypeId,
			@Validated({ Groups.Update.class }) TaskType taskType, BindingResult result);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param taskType
	 * @return
	 * @date 2016年3月18日 下午5:30:38
	 * @version 1.0
	 * @description 服务响应类型列表
	 */
	@RequestMapping(value = "/taskTypes", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("taskType:list")
	public Map<String, Object> getTaskTypeList(@Validated({ Groups.Select.class }) TaskType taskType,
			BindingResult result);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param taskTypeId
	 * @param taskType
	 * @return
	 * @date 2016年3月18日 下午5:30:48
	 * @version 1.0
	 * @description 服务响应类型详情
	 */
	@RequestMapping(value = "/taskType/{taskTypeId}", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("taskType:detail")
	public Map<String, Object> getTaskTypeDetail(@PathVariable("taskTypeId") Integer taskTypeId,
			TaskType taskType);
}