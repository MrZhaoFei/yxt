package org.core.result;

import java.util.HashMap;
import java.util.Map;

import org.core.message.java.SystemMessage;

/**
 * <font color="green">返回数据格式封装类</font>
 * 
 * @ClassName ResultMap
 * @author GangQiang
 * @date 2015年4月24日 上午10:15:20
 * 
 * @version 1.0
 */
public class ResultMap
{
    /**
     * <font color="red">包装JSON，包含数据</font>
     * 
     * @Title convertMap
     * @param stateCode
     * @param data
     * @param message
     * @return {@link Map}
     * @since 1.0
     * @WorkFlow
     */
    public static Map<String, Object> convertMap(Integer stateCode, Object data, String message)
    {
        Map<String, Object> map = new HashMap<String, Object>();
        map.put(SystemMessage.bundle("result.code.key"), stateCode);
        map.put(SystemMessage.bundle("result.date.key"), data);
        map.put(SystemMessage.bundle("result.message.key"), message);
        return map;
    }
    
    /**
     * <font color="red">包装JSON，不包含数据</font>
     * 
     * @Title convertMap
     * @param stateCode
     * @param data
     * @param message
     * @return {@link Map}
     * @since 1.0
     * @WorkFlow
     */
    public static Map<String, Object> convertMap(Integer stateCode, String message)
    {
        Map<String, Object> map = new HashMap<String, Object>();
        map.put(SystemMessage.bundle("result.code.key"), stateCode);
        map.put(SystemMessage.bundle("result.message.key"), message);
        return map;
    }

    
}
