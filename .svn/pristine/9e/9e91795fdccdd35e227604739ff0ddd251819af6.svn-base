package org.system.controller.iface.service.transfer;

import java.util.Map;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.service.transfer.TransTreatRecordsInfo;
import org.utils.spring.Groups;

/**
 * 
 * @author ZF
 *
 */
@RequestMapping()
public interface ITransTreatRecordsInfoController {


	/**
	 * 医生获取自己的转诊历史列表
	 * 
	 * @param transTreatRecordsInfo
	 * @param result
	 * @param token
	 * @return
	 */
	@RequestMapping(value = "/doctor/transTreatRecordsInfos", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("transTreatRecordsInfo:list")
	public Map<String, Object> getTransTreatRecordsInfoList(
			@Validated({ Groups.Select.class }) TransTreatRecordsInfo transTreatRecordsInfo, BindingResult result,
			@RequestHeader(value = "token", required = false) String token);

	
	/**
	 * 医生获取转诊记录历史详情
	 * 
	 * @param transTreatDetailyId
	 * @param transTreatDetaily
	 * @param result
	 * @return
	 */
	@RequestMapping(value = { "/doctor/transTreatDetailyHistory/{transId}" }, method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("transTreatDetaily:detail")
	public Map<String, Object> getTransTreatRecordsInfoHistory(@PathVariable("transId") Integer transTreatRecordsInfoId,
			TransTreatRecordsInfo transTreatRecordsInfo, BindingResult result,@RequestHeader(value = "token", required = false) String token);

}