package org.system.controller.impl.sys;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.core.result.ResultCode;
import org.core.result.ResultMap;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.validation.BindingResult;
import org.system.Global;
import org.system.controller.iface.sys.ISysCodeRecordsController;
import org.system.entity.sys.SysCodeRecords;
import org.system.message.Message;
import org.system.service.iface.sys.ISysCodeRecordsService;
@Controller
public class SysCodeRecordsController implements ISysCodeRecordsController{
	Logger log = LoggerFactory.getLogger(SysCodeRecordsController.class);
	
	@Resource
	private ISysCodeRecordsService sysCodeRecordsService;
	
	@Override
	public Map<String, Object> getSysCodeRecordsList(SysCodeRecords sysCodeRecords, BindingResult result) {
		Map<String, Object> resultMap = new HashMap<>();
		List<Map<String, Object>> dataList = sysCodeRecordsService.getSysCodeRecordsList(sysCodeRecords);
		if (dataList != null && dataList.size() > 0) {
			resultMap.put(Global.DATA_TOTAL, sysCodeRecords.getTotal());
			resultMap.put(Global.DATA_ROWS, dataList);
			return ResultMap.convertMap(ResultCode.CODE_SUCCESS, resultMap, Message.bundle("query.success"));
		}
		return ResultMap.convertMap(ResultCode.CODE_DATA_EMPTY, Message.bundle("query.empty"));
	}

}
