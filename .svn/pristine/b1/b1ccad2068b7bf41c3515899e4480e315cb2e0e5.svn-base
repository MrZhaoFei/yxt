<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.sys.SysAboutMapper" >
  <select id="queryOne" parameterType="org.system.entity.sys.SysAbout" resultType="map">
    select id, title, covers, files, create_date createDate, type, content
    from sys_about
    where id = #{id,jdbcType=INTEGER}
  </select>
  <select id="queryAll" parameterType="org.system.entity.sys.SysAbout" resultType="map">
    select id, title, covers, files, create_date createDate, type, content from sys_about
    <where>
    	<if test="type !=null and type!=''">
    		type=#{type}
    	</if>
    	<if test="title !=null and title!=''">
    		and title like CONCAT(CONCAT('%', #{title}), '%')
    	</if>
    </where>
    order by createDate desc
  </select>
</mapper>