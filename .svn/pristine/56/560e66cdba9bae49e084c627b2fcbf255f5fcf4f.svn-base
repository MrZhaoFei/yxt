<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.service.ProductServiceMapper" >
	<!-- 查询列表 -->
	<select id="queryAll" parameterType="org.system.entity.service.ProductService" resultMap="serviceTypeMap">
		select ps.id,ps.name,ps.price,ps.service_type_id serviceTypeId,ps.desc,doctor_type_id doctorTypeId,ps.doctor_level_id doctorLevelId,
		ps.common_field commonField 
		from  product_service ps
		<where>
			<if test="name !=null and name !=''">
				name like CONCAT(CONCAT('%', #{name}), '%')
			</if>
			<if test="serviceTypeId !=null ">
				and ps.service_type_id =#{serviceTypeId}
			</if>
		</where>
	</select>
	<!-- 自定义结果集 -->
	<resultMap type="map" id="serviceTypeMap">
		<result property="serviceTypeId" column="serviceTypeId" />
		<collection property="serviceTypeDetail" column="serviceTypeId" javaType="list" select="getServiceTypes"/>
	</resultMap>
	
	<!-- 查询 service_type 基础服务类型表  -->
	<select id="getServiceTypes" parameterType="org.system.entity.service.ProductService" resultType="map">
		select id,name ,`desc` ,gd_prefix gdPrefix,is_third_party isThirdParty ,is_use isUse,oder_by oderBy from service_type
		where id=#{serviceTypeId}
	</select>
</mapper>