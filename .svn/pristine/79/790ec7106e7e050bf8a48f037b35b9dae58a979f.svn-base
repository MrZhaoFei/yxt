package org.system.controller.iface.user.healthInfo;

import java.util.Map;

import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.user.healthinfo.AllergicHistory;
import org.utils.spring.Groups;

@RequestMapping()
public interface IAllergicHistoryController {
	
	/**
	 * 新增 既往过敏史
	 * 
	 * @param allergicHistory
	 * @param result
	 * @param token
	 * @return
	 */
	@RequestMapping(value = { "/doctor/allergicHistory" }, method = RequestMethod.POST)
	@ResponseBody
	public Map<String, Object> insertAllergicHistory(
			@Validated({ Groups.Insert.class }) AllergicHistory allergicHistory, BindingResult result,
			@RequestHeader(value = "token", required = false) String token);

	
	/**
	 * 修改 既往过敏史
	 * 
	 * @param allergicHistoryId
	 * @param allergicHistory
	 * @param result
	 * @param token
	 * @return
	 */
	@RequestMapping(value = { "/doctor/allergicHistory/{archivesId}" }, method = RequestMethod.PUT)
	@ResponseBody
	public Map<String, Object> updatetAllergicHistory(@PathVariable("archivesId") Integer allergicHistoryId,
			@Validated({ Groups.Update.class }) AllergicHistory allergicHistory, BindingResult result,
			@RequestHeader(value = "token", required = false) String token);
	
	
	/**
	 * 查询 既往过敏史列表
	 * 
	 * @param allergicHistory
	 * @param result
	 * @param token
	 * @return
	 */
	@RequestMapping(value = "/doctor/allergicHistorys", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getAllergicHistoryList(@Validated({ Groups.Select.class }) AllergicHistory allergicHistory,
			BindingResult result,@RequestHeader(value = "token", required = false) String token);
	
	/**
	 * 删除   既往过敏史
	 * 
	 * @param familyHistoryId
	 * @param familyHistory
	 * @param result
	 * @param token
	 * @return
	 */
	@RequestMapping(value = { "/doctor/allergicHistory/{archivesId}" }, method = RequestMethod.DELETE)
	@ResponseBody
	public Map<String, Object> deletetAllergicHistory(@PathVariable("archivesId") Integer allergicHistoryId,
			@Validated({ Groups.Delete.class }) AllergicHistory allergicHistory, BindingResult result,
			@RequestHeader(value = "token", required = false) String token);
	
	/**
	 * 查询 既往过敏史列表
	 * 
	 * @param allergicHistory
	 * @param result
	 * @param token
	 * @return
	 */
	@RequestMapping(value = "/user/allergicHistorys", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getAllergicHistoryListByUser(@Validated({ Groups.Select.class }) AllergicHistory allergicHistory,
			BindingResult result,@RequestHeader(value = "token", required = false) String token);
	
	
}
