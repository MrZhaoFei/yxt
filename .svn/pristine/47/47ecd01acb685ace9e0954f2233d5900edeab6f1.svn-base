package org.system.controller.iface.chat;

import java.util.Map;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.chat.WeixinRecordsHistoryInfo;

/**
 * @ClassName: IWeixinRecordsHistoryInfoController
 * @Description: 微信消息历史纪录
 * @author: LiuGangQiang
 * @date: 2016年5月16日 上午10:23:37
 */
@RequestMapping
public interface IWeixinRecordsHistoryInfoController {

	/**
	 * @Title: getWeixinRecordsHistoryInfoListByUser
	 * @Description: 用户获取聊天记录
	 * @param weixinRecordsHistoryInfo
	 * @param result
	 * @param token
	 * @return Map<String,Object>
	 */
	@RequestMapping(value = "/user/weixinRecordsHistoryInfos", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("weixinRecordsHistoryInfo:list:user")
	public Map<String, Object> getWeixinRecordsHistoryInfoListByUser(
			@Validated({
					WeixinRecordsHistoryInfo.SelectByUser.class }) WeixinRecordsHistoryInfo weixinRecordsHistoryInfo,
			BindingResult result, @RequestHeader(value = "token", required = false) String token);

	/**
	 * @Title: getWeixinRecordsHistoryInfoListByDoctor
	 * @Description: 医生获取聊天记录
	 * @param weixinRecordsHistoryInfo
	 * @param result
	 * @param token
	 * @return Map<String,Object>
	 */
	@RequestMapping(value = "/doctor/weixinRecordsHistoryInfos", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("weixinRecordsHistoryInfo:list:doctor")
	public Map<String, Object> getWeixinRecordsHistoryInfoListByDoctor(
			@Validated({
					WeixinRecordsHistoryInfo.SelectByDoctor.class }) WeixinRecordsHistoryInfo weixinRecordsHistoryInfo,
			BindingResult result, @RequestHeader(value = "token", required = false) String token);

}