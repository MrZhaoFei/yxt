package org.system.controller.iface.user.healthtest;

import java.util.Map;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.user.healthtest.SelfTestQuestion;
import org.utils.spring.Groups;

/**
 * @ClassName ISelfTestQuestionController
 * @author <font color="red"><b>LiuMrLiu</b></font>
 * @date 2016年3月21日 上午11:08:04
 * @version 1.0
 * @description 问卷
 */
@RequestMapping(value = { "/user" })
public interface ISelfTestQuestionController {

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param selfTestQuestion
	 * @param result
	 * @return
	 * @date 2016年3月18日 下午5:30:14
	 * @version 1.0
	 * @description 新增问卷
	 */
	@RequestMapping(value = "/selfTestQuestion", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("selfTestQuestion:insert")
	public Map<String, Object> insertSelfTestQuestion(@Validated({ Groups.Insert.class }) SelfTestQuestion selfTestQuestion,
			BindingResult result,@RequestHeader(value = "token", required = false) String token);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param selfTestQuestionId
	 * @param selfTestQuestion
	 * @param result
	 * @return
	 * @date 2016年3月18日 下午5:30:26
	 * @version 1.0
	 * @description 修改问卷
	 */
	@RequestMapping(value = "/selfTestQuestion/{selfTestQuestionId}", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("selfTestQuestion:update")
	public Map<String, Object> updateSelfTestQuestion(@PathVariable("selfTestQuestionId") Integer selfTestQuestionId,
			@Validated({ Groups.Update.class }) SelfTestQuestion selfTestQuestion, BindingResult result);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param selfTestQuestion
	 * @return
	 * @date 2016年3月18日 下午5:30:38
	 * @version 1.0
	 * @description 问卷列表
	 */
	@RequestMapping(value = "/selfTestQuestions", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("selfTestQuestion:list")
	public Map<String, Object> getSelfTestQuestionList(@Validated({ Groups.Select.class }) SelfTestQuestion selfTestQuestion,
			BindingResult result,@RequestHeader(value = "token", required = false) String token);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param selfTestQuestionId
	 * @param selfTestQuestion
	 * @return
	 * @date 2016年3月18日 下午5:30:48
	 * @version 1.0
	 * @description 问卷详情
	 */
	@RequestMapping(value = "/selfTestQuestion/{selfTestQuestionId}", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("selfTestQuestion:detail")
	public Map<String, Object> getSelfTestQuestionDetail(@PathVariable("selfTestQuestionId") Integer selfTestQuestionId,
			SelfTestQuestion selfTestQuestion);
}