package org.system.controller.iface.user;

import java.util.Map;

import org.core.annotation.RequiresPermissions;
import org.springframework.transaction.annotation.Transactional;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.user.UserDetail;
import org.utils.spring.Groups;

/**
 * @ClassName IUserDetailController
 * @author <font color="red"><b>LiuMrLiu</b></font>
 * @date 2016年3月21日 上午11:08:04
 * @version 1.0
 * @description 用户详情
 */
@RequestMapping(value = { "/user" })
public interface IUserDetailController {

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param userDetail
	 * @param result
	 * @return
	 * @date 2016年3月18日 下午5:30:14
	 * @version 1.0
	 * @description 新增用户详情
	 */
	@RequestMapping(value = "/userDetail", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("userDetail:insert")
	public Map<String, Object> insertUserDetail(@Validated({ Groups.Insert.class }) UserDetail userDetail,
			BindingResult result);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param userId
	 * @param userDetail
	 * @param result
	 * @return
	 * @date 2016年3月18日 下午5:30:26
	 * @version 1.0
	 * @description 修改用户详情
	 */
	@RequestMapping(value = "/userDetail/{userId}", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("userDetail:update")
	@Transactional
	public Map<String, Object> updateUserDetail(@PathVariable("userId") Integer userId,
			/*@Validated({ Groups.Update.class }) */UserDetail userDetail, BindingResult result);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param userDetail
	 * @param result
	 * @param token
	 * @return
	 * @date 2016年4月5日 下午3:32:59
	 * @version 1.0
	 * @description 用户完善个人详情信息
	 */
	@RequestMapping(value = "/userDetail", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("userDetailForSession:update")
	public Map<String, Object> updateUserDetailForUser(
			@Validated({ Groups.Update.class }) UserDetail userDetail, BindingResult result,
			@RequestHeader(value = "token", required = false) String token);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param userId
	 * @param userDetail
	 * @return
	 * @date 2016年3月18日 下午5:30:48
	 * @version 1.0
	 * @description 用户详情详情
	 */
	@RequestMapping(value = "/userDetail/{userId}", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("userDetail:detail")
	public Map<String, Object> getUserDetailDetail(@PathVariable("userId") Integer userId, UserDetail userDetail);
}