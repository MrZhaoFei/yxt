<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.doc.DocTmplateMapper" >
  <!-- 删除 -->
  <delete id="delete" parameterType="org.system.entity.doc.DocTmplate" >
    delete from doc_tmplate
    where id = #{id}
  </delete>
  <!-- 新增 -->
  <insert id="insert" parameterType="org.system.entity.doc.DocTmplate" >
    insert into doc_tmplate ( doc_title, 
      doc_desc, doc_content)
    values ( #{docTitle}, 
      #{docDesc}, #{docContent})
  </insert>
  <!-- 修改 -->
  <update id="update" parameterType="org.system.entity.doc.DocTmplate" >
    update doc_tmplate set id=#{id}
    <if test="docTitle !=null and docTitle !=''" >
    	,doc_title = #{docTitle}
    </if>
    <if test="docDesc !=null and docDesc !=''" >
    	,doc_desc = #{docDesc}
    </if>
    <if test="docContent !=null and docContent !=''" >
    	,doc_content= #{docContent}
    </if>
    where id = #{id}
  </update>
  <!-- 查询单个 -->
  <select id="queryOne" resultType="map" parameterType="org.system.entity.doc.DocTmplate" >
    select id, doc_title docTitle, doc_desc docDesc, doc_content docContent
    from doc_tmplate
    where id = #{id}
  </select>
  <!-- 查询所有 -->
  <select id="queryAll" resultType="map"  parameterType="org.system.entity.doc.DocTmplate">
    select id, doc_title docTitle, doc_desc docDesc, doc_content docContent
    from doc_tmplate
    <where>
    	<if test="docTitle !=null and docTitle !=''">
    		doc_title like CONCAT(CONCAT('%', #{docTitle}), '%') 
    	</if>
    	<if test="docDesc !=null and docDesc !=''">
    		and doc_desc like CONCAT(CONCAT('%', #{docDesc}), '%') 
    	</if>
    	<if test="docContent !=null and docContent !=''">
    		and doc_content like CONCAT(CONCAT('%', #{docContent}), '%') 
    	</if>
    </where>
  </select>
  	
  <!-- 检查唯一性 -->
  <select id="checkExists" parameterType="org.system.entity.doc.DocTmplate" resultType="map">
    select id, doc_title docTitle, doc_desc docDesc, doc_content docContent
    from doc_tmplate where doc_title=#{docTitle} and doc_desc=#{docDesc} and doc_content=#{docContent}
  </select>
</mapper>