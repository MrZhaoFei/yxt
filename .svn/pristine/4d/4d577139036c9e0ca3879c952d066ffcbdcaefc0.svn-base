package org.system.controller.iface;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.service.ServicePackCondition;
import org.utils.spring.Groups;

@RequestMapping(value = { "/admin" })
public interface IServicePackConditionController {
	

	/**
	 * 添加
	 * @param ServicePackCondition
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/servicePackCondition/insert", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("servicePackCondition:insert")
	public Map<String, Object> insertServicePackCondition(@Validated({ Groups.Insert.class }) ServicePackCondition servicePackCondition,
			BindingResult result);	
	
	
	
	  
		/**
		 * 所有的
		 * @param servicePackCondition
		 * @param result
		 * @return
		 */
		@RequestMapping(value = "/servicePackCondition", method = RequestMethod.GET)
		@ResponseBody
		@RequiresPermissions("servicePackCondition:list")
		public Map<String, Object> getServicePackConditionList(@Validated({ Groups.Select.class }) ServicePackCondition servicePackCondition, BindingResult result,HttpServletRequest req);
		
		/**
		 * 修改
		 * @param id
		 * @param servicePackCondition
		 * @param result
		 * @return
		 */
		@RequestMapping(value = "/servicePackCondition/{id}/update", method = RequestMethod.PUT)
		@ResponseBody
		@RequiresPermissions("servicePackCondition:update")
		public Map<String, Object> updateServicePackCondition(@PathVariable("id") Integer id,
				@Validated({ Groups.Update.class }) ServicePackCondition servicePackCondition, BindingResult result);
		
		
		/**
		 * 删除
		 * @param id
		 * @param servicePackCondition
		 * @return
		 */
		@RequestMapping(value = "/servicePackCondition/{id}/delete", method = RequestMethod.DELETE)
		@ResponseBody
		@RequiresPermissions("servicePackCondition:delete")
		public  Map<String, Object> deleteServicePackCondition(@PathVariable("id") Integer id, ServicePackCondition servicePackCondition);
		
		
		
		
		/**
		 * 单个信息
		 * @param id
		 * @param servicePackCondition
		 * @return
		 */
		@RequestMapping(value = "/servicePackCondition/{id}/detail", method = RequestMethod.GET)
		@ResponseBody
		@RequiresPermissions("servicePackCondition:detail")
		public Map<String, Object> getServicePackConditionDetail(@PathVariable("id") Integer id, ServicePackCondition servicePackCondition);
		

}
