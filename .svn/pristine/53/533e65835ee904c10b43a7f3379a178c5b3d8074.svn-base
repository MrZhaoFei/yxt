package org.system.controller.iface.content;

import java.util.Map;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.content.Content;
import org.utils.spring.Groups;

/**
 * @ClassName: IContentController
 * @Description: 短信内容模板
 * @author: LiuGangQiang
 * @date: 2016年5月16日 上午10:37:18
 */
@RequestMapping(value = { "/common" })
public interface IContentController {

	/**
	 * @Title: getContents
	 * @Description: 查询内容模板列表
	 * @param content
	 * @param result
	 * @return Map<String,Object>
	 */
	@RequestMapping(value = "/contents", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("content:detail")
	public Map<String, Object> getContents(@Validated({ Groups.Select.class }) Content content, BindingResult result);

}