package org.system.mapper.hospital;

import java.util.List;
import java.util.Map;

import org.core.mapper.IBaseMapper;
import org.system.entity.Hospital;

public interface HospitalMapper extends IBaseMapper<Hospital> {
	
	/**
	 * @description 根据行政区域的code_value的查询出行政区域的id值
	 * 
	 * @param hospital
	 *            code_value=#{addressCode}
	 * @return 行政区域id值
	 */
	public int queryCodeId(Hospital hospital);

	/**
	 * 查询机构中的 卫生服务中心 和医院类型列表 
	 * @param hospital
	 * @return 卫生服务中心 和医院类型列表
	 */
	public List<Map<String, Object>> queryWeiAndYi(Hospital hospital);
    
	/**
	 * 查询所有机构根据五级地址  根据地址的code_value
	 * @param hospital
	 * @return
	 */
	public List<Map<String, Object>> queryAllHospitalList(Hospital hospital);
    
	/**
	 * 查询该机构是否被签约
	 * @param hospital
	 * @return int
	 */
	public int queryHospitalContract(Hospital hospital);
   
	/**
	 * 修改已签约的机构 (已经签约的机构是不允许修改机构类型的)
	 * @param hospital
	 * @return int
	 */
	public int updateHospitalContract(Hospital hospital);

}
