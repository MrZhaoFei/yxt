<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.address.SysCodeRecodsMapper">

<!-- 查询  查询省-->
<select id="queryPro" parameterType="org.system.entity.SysCodeRecods" resultType="map">
  select  id,code_value ,code_name,code_type,code_desc,code_remark,pid  from sys_code_records where code_type='GB/T2260-2007' and pid=#{pid}
</select>


<!--模糊查询  -->

<select id="queryLike" parameterType="org.system.entity.SysCodeRecods" resultType="map">
 select  id,code_value ,code_name,code_type,code_desc,code_remark,pid  from sys_code_records where code_type='GB/T2260-2007' 
 and code_name like CONCAT(CONCAT('%', #{codeName}), '%')
</select>


<!--模糊查询医院机构  -->

<select id="queryHospital" parameterType="org.system.entity.SysCodeRecods" resultType="map">
 select id,code_value ,code_name,code_type,code_desc,code_remark  from sys_code_records where code_type='hospitalbm'  
 and code_name like CONCAT(CONCAT('%', #{codeName}), '%')
</select>


 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 


</mapper>