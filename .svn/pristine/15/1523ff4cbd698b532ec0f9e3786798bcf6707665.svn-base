package org.system.controller.iface.content;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.content.Content;
import org.utils.spring.Groups;

@RequestMapping("/admin")
public interface IContentController {
	
	
	/**
	 * 新增
	 * @param content
	 * @param result
	 * @return
	 */
	@RequestMapping(value = { "/content/insert" }, method = RequestMethod.POST)
	@ResponseBody
	public Map<String, Object> insertContent(
			@Validated({ Groups.Insert.class }) Content content, BindingResult result);
	
	
	/**
	 * 修改
	 * @param id
	 * @param content
	 * @param result
	 * @return
	 */
	@RequestMapping(value = { "/content/{id}" }, method = RequestMethod.PUT)
	@ResponseBody
	public Map<String, Object> updatetContent(@PathVariable("id") Integer id,
			@Validated({ Groups.Update.class }) Content content, BindingResult result);

	
	/**
	 * 删除
	 * @param id
	 * @param content
	 * @param resultdeleteContentByContentTypeId
	 * @return
	 */
	@RequestMapping(value = "/content/{id}", method = RequestMethod.DELETE)
	@ResponseBody
	public  Map<String, Object> deleteContent(@PathVariable("id") Integer id,Content content, BindingResult result);
	
	
	

	/**
	 * 删除
	 * @param id
	 * @param content
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/contents/{id}", method = RequestMethod.DELETE)
	@ResponseBody
	public  Map<String, Object> deleteContentByContentTypeId(@PathVariable("id") Integer id,Content content, BindingResult result);
	
	
	
	
	
	
	/**
	 * 查询所有
	 * @param content
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/contents", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getContentList(@Validated({ Groups.Select.class }) Content content, BindingResult result,HttpServletRequest req);
	
	
	/**
	 * 查询详情
	 * @param id
	 * @param contentType
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/content/{id}", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getContentDetail(@PathVariable("id") Integer selfTestAnswerId,Content content, BindingResult result);
	
	
	

}
