<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.doctor.TitleMapper" >

   <!-- 新增 -->
	<insert id="insert" parameterType="org.system.entity.doctor.Title" useGeneratedKeys="true" keyColumn="id">
		insert into title (name,remark) values (#{name},#{remark})
	</insert>
	
	<select id="queryAll" parameterType="org.system.entity.doctor.Title" resultType="map">
	   select id,name,remark from title 
	   <where>
    <if test="name !=null and name!=''">
		name like CONCAT(CONCAT('%', #{name}), '%')
	</if>
	   </where>
	</select>
	
	
	<!-- 删除 -->
	<delete id="delete" parameterType="org.system.entity.doctor.Title">
		DELETE FROM title WHERE id=#{id}
	</delete>
	
   
   <!-- 修改 -->
	<update id="update" parameterType="org.system.entity.doctor.Title">
		UPDATE title SET id=#{id}
		<if test="remark !=null and remark !=''">
			,remark=#{remark}
		</if> 
		 WHERE id=#{id}
	</update>
    
    <!-- 根据主键查询单个 -->
	<select id="queryOne" parameterType="org.system.entity.doctor.Title" resultType="map">
		SELECT id,name,remark FROM title WHERE id=#{id}
	</select>
	
	
	<!-- 检查唯一性 -->
    <select id="checkExists" parameterType="org.system.entity.doctor.Title" resultType="map">
	     SELECT id,name,remark FROM title WHERE name=#{name} and remark=#{remark}
     </select>

</mapper>