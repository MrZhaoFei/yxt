<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.content.ContentTypeMapper" >

    <!-- 新增 -->
	<insert id="insert" parameterType="org.system.entity.content.ContentType" useGeneratedKeys="true" keyColumn="id">
		insert into content_type (name,remark) values (#{name},#{remark})
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="org.system.entity.content.ContentType">
		DELETE FROM content_type WHERE id=#{id}
	</delete>
	
	<!-- 修改 -->
	<update id="update" parameterType="org.system.entity.content.ContentType">
		UPDATE content_type SET id=#{id}
		<if test="name !=null and name !=''">
			,name=#{name}
		</if>		
		<if test="remark !=null and remark!=''">
		   ,remark=#{remark}
		</if>
		 WHERE id=#{id}
	</update>

	<!-- 查询全部 -->
	<select id="queryAll" parameterType="org.system.entity.content.ContentType" resultType="map">
		SELECT id,name,remark from content_type
		<where>
		 <if test="name !=null and name !=''">
    		name like CONCAT(CONCAT('%', #{name}), '%') 
    	</if>
		</where>
	</select>
	
	
	<!-- 根据主键查询单个 -->
	<select id="queryOne" parameterType="org.system.entity.content.ContentType" resultType="map">
		 select id,name,remark from content_type WHERE id=#{id}
	</select>
	
	<!-- 检查唯一性 -->
    <select id="checkExists" parameterType="org.system.entity.content.ContentType" resultType="map">
	     SELECT id,name,remark from content_type where  name=#{name} and remark=#{remark}
     </select>

</mapper>