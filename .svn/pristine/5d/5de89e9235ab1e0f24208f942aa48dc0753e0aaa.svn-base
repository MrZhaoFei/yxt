<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.admin.AdminUserMapper">


	<!-- 修改密码 -->
	<update id="update" parameterType="org.system.entity.AdminUser">
		update admin_user
		<set>
			<if test="password !=null and password!=''">
				password=#{password}
			</if>
		</set>
		where id=#{id}
	</update>

	<select id="checkExists" parameterType="org.system.entity.AdminUser"
		resultType="map">
		select id,username,password,state ,user_type userType ,hospital_id hospitalId  from admin_user
		<where>
			<if test="username!=null and username!=''">
				username=#{username}
			</if>
			<if test="password!=null and password!=''">
				and password=#{password}
			</if>
		</where>
	</select>



	<!-- 查询单个 -->
	<select id="queryOne" parameterType="org.system.entity.AdminUser"
		resultType="map">
		select id,username,password,state,remark,user_type userType,hospital_id hospitalId from admin_user where
		id=#{id}
	</select>

	<!-- 新增 -->
	<insert id="insert" parameterType="org.system.entity.AdminUser"
		useGeneratedKeys="true" keyColumn="id">
		insert into admin_user (username,password,state,remark,user_type,hospital_id) values
		(#{username},#{password},#{state},#{remark},#{userType},#{hospitalId})
	</insert>


	<select id="queryAll" parameterType="org.system.entity.AdminUser"
		resultType="map">
		select id,username,password,state,user_type userType,remark,hospital_id hospitalId from admin_user
		<where>
			<if test="username!=null and username!=''">
				username like CONCAT(CONCAT('%', #{username}), '%')
			</if>
			<if test="userType!=null and userType!=''">
				and user_type =#{userType}
			</if>
		</where>
	</select>

	<!--删除 只能删除其他用户 -->
	<delete id="delete">
		delete from admin_user where id=#{id}
	</delete>
	
</mapper>