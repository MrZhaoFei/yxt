package org.system.service.impl.service.resp;

import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;
import org.system.entity.service.resp.TaskType;
import org.system.mapper.service.resp.TaskTypeMapper;
import org.system.service.iface.service.resp.ITaskTypeService;

@Service
public class TaskTypeService implements ITaskTypeService {
	@Resource
	private TaskTypeMapper mapper;

	@Override
	public Map<String, Object> getTaskTypeByFild(TaskType taskType) {
		return mapper.checkExists(taskType);
	}

	@Override
	public int insertTaskType(TaskType taskType) {
		return mapper.insert(taskType);
	}

	@Override
	public int updateTaskType(TaskType taskType) {
		return mapper.update(taskType);
	}

	@Override
	public List<Map<String, Object>> getTaskTypeList(TaskType taskType) {
		return mapper.queryAll(taskType);
	}

	@Override
	public Map<String, Object> getTaskTypeDetail(TaskType taskType) {
		return mapper.queryOne(taskType);
	}
}
