package org.system.service.iface;

import java.util.List;
import java.util.Map;

import org.system.entity.Department;

public interface IDepartmentService {
	
	/**
	 * 新增
	 * @param department
	 * @return int
	 */
	public int insertDepartment (Department department);
	
	/**
	 * 修改
	 * @param department
	 * @return int
	 */
	public int updateDepartment(Department department);
	
	/**
	 * 删除
	 * @param department
	 * @return int
	 */
	public int deleteDepartment(Department department);
	
	/**
	 * 科室列表
	 * @param department
	 * @return List<Map<String, Object>>
	 */
	public List<Map<String, Object>> getDepartmentList(Department department);
	
	/**
	 * 单个详细信息
	 * @param department
	 * @return Map<String, Object>
	 */
	public Map<String, Object> getDepartmentDetail(Department department);
   
	/**
	 * 检查唯一性
	 * @param department
	 * @return Map<String, Object>
	 */
	public Map<String, Object> getDepartmentByFiled(Department department);
	
	public List<Map<String, Object>> getDepartmentAllList(Department department);

}
