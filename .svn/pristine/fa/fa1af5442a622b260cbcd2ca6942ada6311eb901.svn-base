<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.sys.SysCodeRecordsMapper">
	<!-- 查询所有 -->
	<select id="queryAll" parameterType="org.system.entity.sys.SysCodeRecords"
		resultType="map">
		select id,pid,code_value codeValue,code_name codeName,code_type codeType,code_desc codeDesc,code_remark
		codeRemark from sys_code_records
		<where>
			<if test="codeType !=null and codeType !=''">
				code_type=#{codeType}
			</if>
			<if test="isParent == true">
				and pid is null
			</if>
			<if test="pid !=null">
				and pid=#{pid}
			</if>
		</where>
	</select>
</mapper>