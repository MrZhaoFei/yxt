package org.system.controller.iface.user;

import java.util.Map;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.user.Follow;
import org.utils.spring.Groups;

/**
 * @ClassName IFollowController
 * @author <font color="red"><b>LiuMrLiu</b></font>
 * @date 2016年3月21日 上午11:08:04
 * @version 1.0
 * @description 关注领域
 */
@RequestMapping(value = { "/common" })
public interface IFollowController {

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param follow
	 * @param result
	 * @return
	 * @date 2016年3月18日 下午5:30:14
	 * @version 1.0
	 * @description 新增关注领域
	 */
	@RequestMapping(value = "/follow", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("follow:insert")
	public Map<String, Object> insertFollow(@Validated({ Groups.Insert.class }) Follow follow, BindingResult result);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param followId
	 * @param follow
	 * @param result
	 * @return
	 * @date 2016年3月18日 下午5:30:26
	 * @version 1.0
	 * @description 修改关注领域
	 */
	@RequestMapping(value = "/follow/{followId}", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("follow:update")
	public Map<String, Object> updateFollow(@PathVariable("followId") Integer followId,
			@Validated({ Groups.Update.class }) Follow follow, BindingResult result);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param follow
	 * @return
	 * @date 2016年3月18日 下午5:30:38
	 * @version 1.0
	 * @description 关注领域列表
	 */
	@RequestMapping(value = "/follows", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("follow:list")
	public Map<String, Object> getFollowList(@Validated({ Groups.Select.class }) Follow follow, BindingResult result);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param followId
	 * @param follow
	 * @return
	 * @date 2016年3月18日 下午5:30:48
	 * @version 1.0
	 * @description 关注领域详情
	 */
	@RequestMapping(value = "/follow/{followId}", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("follow:detail")
	public Map<String, Object> getFollowDetail(@PathVariable("followId") Integer followId, Follow follow);
}