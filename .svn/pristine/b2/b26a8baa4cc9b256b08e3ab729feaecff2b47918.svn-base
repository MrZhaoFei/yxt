package org.system.controller.iface.code;

import java.util.Map;

import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import org.core.annotation.RequiresPermissions;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

/**
 * @ClassName: IValidCodeController
 * @Description: 验证码
 * @author: LiuGangQiang
 * @date: 2016年5月16日 上午10:26:29
 */
@RequestMapping
public interface IValidCodeController {

	/**
	 * @Title: getCodeByPhone
	 * @Description: 手机验证码
	 * @param phone
	 *            手机号
	 * @return Map<String,Object>
	 */
	@RequestMapping(value = { "/common/code/phone/{phone}" }, method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("valid:getCodeByPhone")
	public Map<String, Object> getCodeByPhone(@PathVariable("phone") String phone);

	/**
	 * @Title: getCodeByDoctorName
	 * @Description: 根据医生姓名获取手机验证码
	 * @param name
	 * @return Map<String,Object>
	 */
	@RequestMapping(value = { "/doctor/code/name/{name}" }, method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("valid:getCodeByName")
	public Map<String, Object> getCodeByDoctorName(@PathVariable("name") String name);

	/**
	 * @Title: getCode
	 * @Description: 获取图形验证码
	 * @param session
	 * @param response
	 */
	@RequestMapping(value = { "/common/code" }, method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("valid:getCode")
	public void getCode(HttpSession session, HttpServletResponse response);

	/**
	 * @Title: getCodeByLoginDoctor
	 * @Description: 登录医生获取手机验证码
	 * @param token
	 * @return Map<String,Object>
	 */
	@RequestMapping(value = { "/doctor/code/login" }, method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getCodeByLoginDoctor(@RequestHeader(value = "token", required = false) String token);

	/**
	 * @Title: getCodeByLoginUser
	 * @Description: 登录用户获取手机验证码
	 * @param token
	 * @return Map<String,Object>
	 */
	@RequestMapping(value = { "/user/code/login" }, method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getCodeByLoginUser(@RequestHeader(value = "token", required = false) String token);

	/**
	 * @param token
	 * @return
	 */
	@RequestMapping(value = { "/des" }, method = RequestMethod.GET)
	@ResponseBody
	public String getCodeByDes(@RequestParam("data") String data) throws Exception;

}