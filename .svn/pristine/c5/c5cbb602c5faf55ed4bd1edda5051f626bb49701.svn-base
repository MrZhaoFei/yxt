package org.system.controller.iface;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.Hospital;
import org.utils.spring.Groups;

@RequestMapping("/admin")
public interface IHospitalController {
	
	
	/**
	 * 新增
	 * @param hospital
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/hospital/insert", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("hospital:insert")
	public Map<String, Object> insertHospital(@Validated({ Groups.Insert.class }) Hospital hospital, BindingResult result,HttpServletRequest req, HttpServletResponse resp);

	
	
	
	
	/**
	 * 修改
	 * @param id
	 * @param Hospital
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/hospital/{id}/update", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("hospital:update")
	public Map<String, Object> updateHospital(@PathVariable("id") Integer id,
			@Validated({ Groups.Update.class }) Hospital hospital, BindingResult result);
	
	
	/**
	 * 所有的
	 * @param Hospital
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/hospital", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("hospital:list")
	public Map<String, Object> getHospitalList(@Validated({ Groups.Select.class }) Hospital hospital, BindingResult result,HttpServletRequest req);


	/**
	 * 所有的
	 * @param Hospital
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/hospitals", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getAllHospitalList(@Validated({ Groups.Select.class }) Hospital hospital,
			BindingResult result,HttpServletRequest req);
	
	
	
	
	
	
	/**
	 * 单个信息
	 * @param ID
	 * @param hospital
	 * @return
	 */
	@RequestMapping(value = "/hospital/{id}/detail", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("hospital:detail")
	public Map<String, Object> getHospitalDetail(@PathVariable("id") Integer id, Hospital hospital);

	
	/**
	 * 删除
	 * @param id
	 * @param hospital
	 * @return
	 */
	@RequestMapping(value = "/hospital/{id}/delete", method = RequestMethod.DELETE)
	@ResponseBody
	@RequiresPermissions("hospital:delete")
	public  Map<String, Object> deleteHospital(@PathVariable("id") Integer id, Hospital hospital);
	
	
	/**
	 * 所有的医院和卫生服务中心
	 * @param Hospital
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/hospitalWeiAndYi", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("hospital:list")
	public Map<String, Object> getWeiAndYi(@Validated({ Groups.Select.class }) Hospital hospital, BindingResult result,HttpServletRequest req);
	
	
	/**
	 * 是否签约的机构
	 * @param id
	 * @param hospital
	 * @return
	 */
	@RequestMapping(value = "/getHospitalContract/{id}", method = RequestMethod.GET)
	@ResponseBody
	public int getHospitalContract(@PathVariable("id") Integer id, Hospital hospital);
	
	
	

	
	
	
}
