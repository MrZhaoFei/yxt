package org.system.service.impl.service;

import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;
import org.system.entity.service.PackageType;
import org.system.mapper.service.PackageTypeMapper;
import org.system.service.iface.service.IPackageTypeService;

@Service
public class PackageTypeService implements IPackageTypeService {
	@Resource
	private PackageTypeMapper mapper;

	@Override
	public Map<String, Object> getPackageTypeByFild(PackageType packageType) {
		return mapper.checkExists(packageType);
	}

	@Override
	public int insertPackageType(PackageType packageType) {
		return mapper.insert(packageType);
	}

	@Override
	public int updatePackageType(PackageType packageType) {
		return mapper.update(packageType);
	}

	@Override
	public List<Map<String, Object>> getPackageTypeList(PackageType packageType) {
		return mapper.queryAll(packageType);
	}

	@Override
	public Map<String, Object> getPackageTypeDetail(PackageType packageType) {
		return mapper.queryOne(packageType);
	}
}
