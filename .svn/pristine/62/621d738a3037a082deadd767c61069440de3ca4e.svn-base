package org.system.controller.iface.content;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.content.ContentType;
import org.utils.spring.Groups;

@RequestMapping("/admin")
public interface IContentTypeController {
	/**
	 * 新增
	 * @param contentType
	 * @param result
	 * @return
	 */
	@RequestMapping(value = { "/contentType/insert" }, method = RequestMethod.POST)
	@ResponseBody
	public Map<String, Object> insertContentType(
			@Validated({ Groups.Insert.class }) ContentType contentType, BindingResult result);
	
	
	/**
	 * 修改
	 * @param id
	 * @param contentType
	 * @param result
	 * @return
	 */
	@RequestMapping(value = { "/contentType/{id}" }, method = RequestMethod.PUT)
	@ResponseBody
	public Map<String, Object> updatetContentType(@PathVariable("id") Integer id,
			@Validated({ Groups.Update.class }) ContentType contentType, BindingResult result);

	
	/**
	 * 删除
	 * @param id
	 * @param contentType
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/contentType/{id}", method = RequestMethod.DELETE)
	@ResponseBody
	public  Map<String, Object> deleteContentType(@PathVariable("id") Integer id,ContentType contentType, BindingResult result);
	
	/**
	 * 查询所有
	 * @param contentType
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/contentType", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getContentTypeList(@Validated({ Groups.Select.class }) ContentType contentType, BindingResult result,HttpServletRequest req);
	
	
	/**
	 * 查询详情
	 * @param id
	 * @param contentType
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/contentType/{id}", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getContentTypeDetail(@PathVariable("id") Integer id,ContentType contentType, BindingResult result);
	
	
	
}
