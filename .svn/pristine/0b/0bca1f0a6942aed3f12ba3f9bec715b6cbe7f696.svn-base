package org.system.controller.iface.service;

import java.util.Map;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.service.ServicePack;
import org.utils.spring.Groups;

/**
 * @ClassName IServicePackController
 * @author <font color="red"><b>LiuMrLiu</b></font>
 * @date 2016年3月21日 上午11:08:04
 * @version 1.0
 * @description 服务包
 */
@RequestMapping()
public interface IServicePackController {

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param servicePack
	 * @return
	 * @date 2016年3月18日 下午5:30:38
	 * @version 1.0
	 * @description 服务包列表
	 */
	@RequestMapping(value = "/user/servicePacks", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("servicePack:list")
	public Map<String, Object> getServicePackListByUser(@Validated({ Groups.Select.class }) ServicePack servicePack,
			BindingResult result, @RequestHeader(value = "token", required = false) String token);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param servicePack
	 * @param result
	 * @return
	 * @date 2016年4月12日 下午1:53:33
	 * @version 1.0
	 * @description 服务包列表 后台使用
	 */
	@RequestMapping(value = "/doctor/servicePacks", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("servicePackByUser:list")
	public Map<String, Object> getServicePackListByDoctor(@Validated({ Groups.Other.class }) ServicePack servicePack,
			BindingResult result, @RequestHeader(value = "token", required = false) String token);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param servicePackId
	 * @param servicePack
	 * @return
	 * @date 2016年3月18日 下午5:30:48
	 * @version 1.0
	 * @description 服务包详情
	 */
	@RequestMapping(value = "/user/servicePack/{servicePackId}", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("servicePack:detail")
	public Map<String, Object> getServicePackDetailByUser(@PathVariable("servicePackId") Integer servicePackId,
			ServicePack servicePack, @RequestHeader(value = "token", required = false) String token);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param servicePackId
	 * @param servicePack
	 * @return
	 * @date 2016年3月18日 下午5:30:48
	 * @version 1.0
	 * @description 服务包详情
	 */
	@RequestMapping(value = "/doctor/servicePack/{servicePackId}", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("servicePack:detail")
	public Map<String, Object> getServicePackDetailByDoctor(@PathVariable("servicePackId") Integer servicePackId,
			ServicePack servicePack, @RequestHeader(value = "token", required = false) String token);
}