package org.system.controller.iface.service.visits;

import java.util.Map;

import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.service.visits.TnbFollowupRecords;
import org.utils.spring.Groups;
/**
 * 糖尿病 随访
 * @author ZF
 *
 */
@RequestMapping()
public interface ITnbFollowupRecordsController {

	/**
	 * 新增糖尿病随访记录
	 * 
	 * @param gxyFollowupRecords
	 * @param result	
	 * @param token
	 * @return
	 */
	@RequestMapping(value = { "/doctor/tnbFollowupRecords" }, method = RequestMethod.POST)
	@ResponseBody
	public Map<String, Object> insertTnbFollowupRecords(
			@Validated({ Groups.Insert.class }) TnbFollowupRecords tnbFollowupRecords, BindingResult result,
			@RequestHeader(value = "token", required = false) String token);

	/**
	 * 修改糖尿病随访记录
	 * 
	 * @param gxyFollowupRecords
	 * @param result
	 * @param token
	 * @return
	 */
	@RequestMapping(value = { "/doctor/tnbFollowupRecords/{recordId}" }, method = RequestMethod.PUT)
	@ResponseBody
	public Map<String, Object> updateTnbFollowupRecords(@PathVariable("recordId") Integer tnbFollowupRecordsId,
			@Validated({ Groups.Update.class }) TnbFollowupRecords tnbFollowupRecords, BindingResult result,
			@RequestHeader(value = "token", required = false) String token);

	/**
	 * 查询糖尿病用户随访记录列表
	 * 
	 * @param gxyFollowupRecords
	 * @param result
	 * @param token
	 * @return
	 */
	@RequestMapping(value = { "/doctor/tnbFollowupRecordss" }, method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getTnbFollowupRecordssList(
			@Validated({ Groups.Select.class }) TnbFollowupRecords tnbFollowupRecords, BindingResult result,
			@RequestHeader(value = "token", required = false) String token);

	/**
	 * 查询糖尿病随访记录详情
	 * 
	 * @param gxyFollowupRecordsId
	 * @param gxyFollowupRecords
	 * @param result
	 * @param token
	 * @return
	 */
	@RequestMapping(value = { "/doctor/tnbFollowupRecords/{recordId}" }, method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getTnbFollowupRecordsDetail(@PathVariable("recordId") Integer tnbFollowupRecordsId,
			TnbFollowupRecords tnbFollowupRecords, BindingResult result,
			@RequestHeader(value = "token", required = false) String token);

}
