<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.service.DoctorLevelMapper" >

    <!-- 新增 -->
	<insert id="insert" parameterType="org.system.entity.DoctorLevel" useGeneratedKeys="true" keyColumn="id">
		insert into doctor_level (doctor_level_name,order_level) values (#{doctorLevelName},#{orderLevel})
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="org.system.entity.DoctorLevel">
		DELETE FROM doctor_level WHERE id=#{id}
	</delete>
	

	<!-- 修改 -->
	<update id="update" parameterType="org.system.entity.DoctorLevel">
		UPDATE doctor_level SET id=#{id}
		
		<if test="doctorLevelName !=null and doctorLevelName !=''">
			,doctor_level_name=#{doctorLevelName}
		</if>
		<if test="orderLevel!=null and orderLevel!=''">
		   ,order_level=#{orderLevel}
		</if>
		  WHERE id=#{id}
	</update>

	
	<!-- 查询全部 -->
	<select id="queryAll" parameterType="org.system.entity.DoctorLevel" resultType="map">
		SELECT id,doctor_level_name doctorLevelName,order_level orderLevel FROM doctor_level
		<where>
			<if test="doctorLevelName!=null and doctorLevelName!=''">
				doctor_level_name like CONCAT(CONCAT('%', #{doctorLevelName}), '%')
			</if>
			
		</where>
	</select>
	
	
	<!-- 根据主键查询单个 -->
	<select id="queryOne" parameterType="org.system.entity.DoctorLevel" resultType="map">
		SELECT  id,doctor_level_name ,order_level FROM doctor_level WHERE id=#{id}
	</select>
	
	
	<!-- 检查唯一性 -->
    <select id="checkExists" parameterType="org.system.entity.DoctorLevel" resultType="map">
	    SELECT  id,doctor_level_name,order_level FROM doctor_level WHERE doctor_level_name=#{doctorLevelName} and order_level=#{orderLevel}
     </select>


</mapper>