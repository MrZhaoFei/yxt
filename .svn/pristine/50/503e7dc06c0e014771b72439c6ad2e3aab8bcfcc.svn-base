package org.system.controller.iface.doctor;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.doctor.DoctorDetail;
import org.utils.spring.Groups;

@RequestMapping("/admin")
public interface IDoctorDetailController {
   

	/**
	 * 新增
	 * @param doctorDetail
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/doctorDetail/insert", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("doctorDetail:insert")
	public Map<String, Object> insertDoctorDetail(@Validated({ Groups.Insert.class }) DoctorDetail doctorDetail, BindingResult result);

	
	/**
	 * 修改
	 * @param id
	 * @param doctorDetail
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/doctorDetail/{id}/update", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("doctorDetail:update")
	public Map<String, Object> updateDoctorDetail(@PathVariable("id") Integer id,
			@Validated({ Groups.Update.class }) DoctorDetail doctorDetail, BindingResult result);
	
	
	/**
	 * 所有的
	 * @param doctorDetail
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/doctorDetail", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("doctorDetail:list")
	public Map<String, Object> getDoctorDetailList(@Validated({ Groups.Select.class }) DoctorDetail doctorDetail, BindingResult result,HttpServletRequest req);

	
	/**
	 * 单个信息
	 * @param doctorDetail
	 * @param id
	 * @return
	 */
	@RequestMapping(value = "/doctorDetail/{id}/detail", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("doctorDetail:detail")
	public Map<String, Object> getDoctorDetailDetail(@PathVariable("id") Integer id, DoctorDetail doctorDetail);
	
	
	/**
	 * 删除
	 * @param doctorDetail
	 * @param id
	 * @return
	 */
	@RequestMapping(value = "/doctorDetail/{id}/delete", method = RequestMethod.DELETE)
	@ResponseBody
	@RequiresPermissions("doctorDetail:delete")
	public  Map<String, Object> deleteDoctorDetail(@PathVariable("id") Integer id, DoctorDetail doctorDetail);
	
	
	

}
