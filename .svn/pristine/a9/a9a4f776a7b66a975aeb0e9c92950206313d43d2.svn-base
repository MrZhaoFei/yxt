<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.content.ContentMapper" >


    <!-- 新增 -->
	<insert id="insert" parameterType="org.system.entity.content.Content" useGeneratedKeys="true" keyColumn="id">
		insert into content (name,remark,content_type_id) values (#{name},#{remark},#{contentTypeId})
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="org.system.entity.content.Content">
		DELETE FROM content WHERE id=#{id}
	</delete>
	
	<!-- 删除 -->
	<delete id="deleteContentByContentTypeId" parameterType="org.system.entity.content.Content">
		DELETE FROM content WHERE content_type_id=#{id}
	</delete>
	
	<!-- 修改 -->
	<update id="update" parameterType="org.system.entity.content.Content">
		UPDATE content SET id=#{id}
		<if test="name !=null and name !=''">
			,name=#{name}
		</if>		
		<if test="remark !=null and remark!=''">
		   ,remark=#{remark}
		</if>
		<if test="contentTypeId!=null">
		   ,content_type_id=#{contentTypeId}
		</if>
		 WHERE id=#{id}
		 
	</update>
	

	
	<!-- 查询全部 -->
	<select id="queryAll" parameterType="org.system.entity.content.Content" resultType="map">
		 select c.id ,c.name contentName ,c.remark,ct.id contentTypeId,ct.name contentTypeName from content  c left join content_type ct on c.content_type_id= ct.id
		 <where>
			<if test="name!=null and name!=''">
				c.name like CONCAT(CONCAT('%', #{name}), '%')
			</if>
			<if test="contentTypeId!=null">
			and	ct.id =#{contentTypeId}
			</if>
		
		</where> 
	</select>
	
	
	<!-- 根据主键查询单个 -->
	<select id="queryOne" parameterType="org.system.entity.content.Content" resultType="map">
		 select c.id ,c.name ,c.remark,ct.id contentTypeId,ct.name contentTypeName from content  c left join content_type ct on c.content_type_id= ct.id WHERE c.id=#{id}
	</select>
	
	
	<!-- 检查唯一性 -->
    <select id="checkExists" parameterType="org.system.entity.content.Content" resultType="map">
   
	     SELECT id,name,remark, content_type_id FROM content where name=#{name} and content_type_id=#{contentTypeId}
     </select>


</mapper>