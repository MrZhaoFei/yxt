package org.system.controller.iface;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.service.ServiceType;
import org.utils.spring.Groups;

@RequestMapping("/admin")
public interface IServiceTypeController {
	
	/**
	 * 新增
	 * @param serviceType
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/serviceType/insert", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("serviceType:insert")
	public Map<String, Object> insertServiceType(@Validated({ Groups.Insert.class }) ServiceType serviceType, BindingResult result);

	
	/**
	 * 修改
	 * @param id
	 * @param serviceType
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/serviceType/{id}/update", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("serviceType:update")
	public Map<String, Object> updateServiceType(@PathVariable("id") Integer id,
			@Validated({ Groups.Update.class }) ServiceType serviceType, BindingResult result);
	
	
	/**
	 * 数据列表
	 * @param serviceType
	 * @param result
	 * @param req
	 * @return
	 */
	@RequestMapping(value = "/serviceType", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("serviceType:list")
	public Map<String, Object> getServiceTypeList(@Validated({ Groups.Select.class }) ServiceType serviceType, BindingResult result,HttpServletRequest req);

	
	/**
	 * 单个信息
	 * @param id
	 * @param serviceType
	 * @return
	 */
	@RequestMapping(value = "/serviceType/{id}/detail", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("serviceType:detail")
	public Map<String, Object> getServiceTypeDetail(@PathVariable("id") Integer id, ServiceType serviceType);

	
	/**
	 * 删除
	 * @param id
	 * @param serviceType
	 * @return
	 */
	@RequestMapping(value = "/serviceType/{id}/delete", method = RequestMethod.DELETE)
	@ResponseBody
	@RequiresPermissions("serviceType:delete")
	public  Map<String, Object> deleteServiceType(@PathVariable("id") Integer id, ServiceType serviceType);
	
	

}
