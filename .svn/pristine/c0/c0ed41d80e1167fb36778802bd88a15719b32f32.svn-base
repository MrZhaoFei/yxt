* {
    margin: 0;
    padding: 0;
}

body, input, textarea {
    font-family: Arial, NSimSun, SimSun, Microsoft YaHei;
    font-size: 13px;
}

ul, li {
    list-style-type: none;
}

a {
    color: #000;
    text-decoration: none;
    outline: none;
    -moz-outline: none;
}

img {
    border: none;
}

table {
    border-collapse: collapse;
    border-spacing: 0;
}

/*清除浮动*/
.clear_fix:before, .clear_fix:after {
    content: "";
    display: table;
}

.clear_fix:after {
    clear: both;
}

.clear_fix {
    *zoom: 1;
}

.float_left {
    float: left;
}

.float_right {
    float: right;
}

.relative {
    position: relative;
}

.text_center {
    text-align: center;
}

.text_disable_select {
    -moz-user-select: none;
    -webkit-user-select: none; /*webkit*/
    -ms-user-select: none; /*IE10*/
    -khtml-user-select: none;
    user-select: none;
}

.hidden {
    display: none !important;
    visibility: hidden;
}

.underline {
    text-decoration: underline;
}

/*UL LI实现平行布局*/
ul.line_block {
    font-size: 0;
    *word-spacing: -1px;
}

@media screen and (-webkit-min-device-pixel-ratio: 0) {
    ul.line_block {
        letter-spacing: -4px;
    }
}

ul.line_block li.line_block {
    vertical-align: top;
    font-size: 13px;

    letter-spacing: normal;
    word-spacing: normal;
    display: inline-block;
    *display: inline;
    *zoom: 1;
}

/*仿制表格*/
.like_table {
    display: table;
}

.like_table .like_tr {
    display: table-row;
}

.like_table .like_tr .like_td {
    display: table-cell;
}