@Controller
public class SelfTestQuestionController implements ISelfTestQuestionController {
	Logger log = LoggerFactory.getLogger(SelfTestQuestionController.class);
	@Resource
	private ISelfTestQuestionService selfTestQuestionService;
	@Resource
	private CacheManager cache;

	@Override
	public Map<String, Object> insertSelfTestQuestion(SelfTestQuestion selfTestQuestion, BindingResult result,
			String token) {
		return null;
	}

	@Override
	public Map<String, Object> updateSelfTestQuestion(Integer selfTestQuestionId, SelfTestQuestion selfTestQuestion,
			BindingResult result) {
		return null;
	}

	@Override
	public Map<String, Object> getSelfTestQuestionList(SelfTestQuestion selfTestQuestion, BindingResult result,
			String token) {
			// 定义返回对象
			Map<String, Object> resultMap = new HashMap<>();
			// 根据用户id查询用户的服务项
			List<Map<String, Object>> selfTestQuestionList = selfTestQuestionService.getSelfTestQuestionList(selfTestQuestion);
			if (selfTestQuestionList != null && selfTestQuestionList.size() > 0) {
				// 得到数据总数
				resultMap.put(Global.DATA_TOTAL, selfTestQuestion.getTotal());
				resultMap.put(Global.DATA_ROWS, selfTestQuestionList);
				return ResultMap.convertMap(ResultCode.CODE_SUCCESS, resultMap, Message.bundle("query.success"));
			}
			return ResultMap.convertMap(ResultCode.CODE_DATA_EMPTY, Message.bundle("query.empty"));
	}

	@Override
	public Map<String, Object> getSelfTestQuestionDetail(Integer selfTestQuestionId,
			SelfTestQuestion selfTestQuestion) {
