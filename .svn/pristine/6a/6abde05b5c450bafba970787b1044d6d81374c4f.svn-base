package org.system.service.impl.order;

import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;
import org.system.entity.order.UserOrder;
import org.system.mapper.order.UserOrderMapper;
import org.system.service.iface.order.IUserOrderService;

@Service
public class UserOrderService implements IUserOrderService {
	@Resource
	private UserOrderMapper mapper;

	@Override
	public Map<String, Object> getUserOrderByFild(UserOrder userOrder) {
		return mapper.checkExists(userOrder);
	}

	@Override
	public int insertUserOrder(UserOrder userOrder) {
		return mapper.insert(userOrder);
	}

	@Override
	public int updateUserOrder(UserOrder userOrder) {
		return mapper.update(userOrder);
	}

	@Override
	public List<Map<String, Object>> getUserOrderList(UserOrder userOrder) {
		return mapper.queryAll(userOrder);
	}

	@Override
	public Map<String, Object> getUserOrderDetail(UserOrder userOrder) {
		return mapper.queryOne(userOrder);
	}

	@Override
	public int updateUserOrderForType(Map<String, Object> orderMap) {
		return mapper.updateUserOrderForType(orderMap);
	}
}
