package org.system.controller.iface.user.healthInfo;

import java.util.Map;

import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.user.healthinfo.BloodTransHistory;
import org.utils.spring.Groups;

@RequestMapping()
public interface IBloodTransHistoryController {
	
	/**
	 * 新增 既往输血史
	 * 
	 * @param bloodTransHistory
	 * @param result
	 * @param token
	 * @return
	 */
	@RequestMapping(value = { "/doctor/bloodTransHistory" }, method = RequestMethod.POST)
	@ResponseBody
	public Map<String, Object> insertBloodTransHistory(
			@Validated({ Groups.Insert.class }) BloodTransHistory bloodTransHistory, BindingResult result,
			@RequestHeader(value = "token", required = false) String token);

	
	/**
	 * 
	 * 修改 既往输血史
	 * 
	 * @param bloodTransHistoryId
	 * @param bloodTransHistory
	 * @param result
	 * @param token
	 * @return
	 */
	@RequestMapping(value = { "/doctor/bloodTransHistory/{archivesId}" }, method = RequestMethod.PUT)
	@ResponseBody
	public Map<String, Object> updatetBloodTransHistory(@PathVariable("archivesId") Integer bloodTransHistoryId,
			@Validated({ Groups.Update.class }) BloodTransHistory bloodTransHistory, BindingResult result,
			@RequestHeader(value = "token", required = false) String token);
	
	/**
	 * 查询  既往输血史列表
	 * 
	 * @param bloodTransHistory
	 * @param result
	 * @param token
	 * @return
	 */
	@RequestMapping(value = "/doctor/bloodTransHistorys", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getBloodTransHistoryList(@Validated({ Groups.Select.class }) BloodTransHistory bloodTransHistory,
			BindingResult result,@RequestHeader(value = "token", required = false) String token);
	
	/**
	 * 
	 * 删除 既往输血史列表
	 * 
	 * @param bloodTransHistoryId
	 * @param bloodTransHistory
	 * @param result
	 * @param token
	 * @return
	 */
	
	@RequestMapping(value = { "/doctor/bloodTransHistory/{archivesId}" }, method = RequestMethod.DELETE)
	@ResponseBody
	public Map<String, Object> deletetBloodTransHistory(@PathVariable("archivesId") Integer bloodTransHistoryId,
			@Validated({ Groups.Delete.class }) BloodTransHistory bloodTransHistory, BindingResult result,
			@RequestHeader(value = "token", required = false) String token);
	
	
	/**
	 * 用户查询 健康档案
	 * 
	 * @param bloodTransHistory
	 * @param result
	 * @param token
	 * @return
	 */
	@RequestMapping(value = "/user/bloodTransHistorys", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getBloodTransHistoryListByUser(@Validated({ Groups.Select.class }) BloodTransHistory bloodTransHistory,
			BindingResult result,@RequestHeader(value = "token", required = false) String token);
	
}

