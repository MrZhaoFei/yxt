<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.system.mapper.service.UserServicePackMapper" >
	<!-- 新增 -->
	<insert id="insert" parameterType="org.system.entity.service.UserServicePack" useGeneratedKeys="true" keyProperty="id">
		insert into user_service_pack(user_id,service_pack_id,create_time,price,expire_time,state) 
		values(#{userId},#{servicePackId},#{createTime},#{price},#{expireTime},#{state})
	</insert>
	
	<resultMap type="map" id="userComboMap">
		<result column="id" property="id"/>
		<collection property="userComboInfo" column="id" javaType="list" select="getUserServiceInfo"/>
	</resultMap>
	
	<!-- 查询用户套餐信息-->
	<select id="getUserComboListByUser" parameterType="org.system.entity.service.UserServicePack" resultMap="userComboMap">
		select usp.id,sp.name servicePackName from user_service_pack usp
		left join  service_pack_condition spc on usp.service_pack_id=spc.id
		left join service_pack sp on spc.service_pack_id=sp.id
		where usp.expire_time &gt;now()		
		 <if test="userId !=null">
			and usp.user_id =#{userId}
		 </if>
	</select>

	<!-- 查询用户的服务 -->
	<select id="getUserServiceInfo" parameterType="int" resultType="map">
		select us.id userServiceId,ps.id productServiceId,us.times,us.user_id
		userId,ps.name productServiceName,ps.service_type_id serviceTypeId,st.`name` serviceTypeName from user_service us
		left join product_service ps on us.product_service_id=ps.id
		left join service_type st on st.id=ps.service_type_id
		where us.user_service_pack_id=#{id}
	</select>
	
	<!-- 根据约束键查询数据是否存在 -->
	<select id="checkExists" parameterType="org.system.entity.service.UserServicePack" resultType="map">
		select user_id,service_pack_id from user_service_pack where user_id=#{userId} and service_pack_id=#{servicePackId}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="org.system.entity.service.UserServicePack">
		update user_service_pack set id=#{id}
		<if test="expireTime !=null">
			,expire_time=#{expireTime}
		</if>
		where id=#{id}
	</update>
	<!-- 查询用户用户未过期的服务包 -->
	<select id="getNoExpireUserServicePackList" parameterType="org.system.entity.service.UserServicePack" resultType="map">
		select 	usp.id,spc.id servicePackConditionId,sp.id servicePackId,usp.create_time createTime,usp.expire_time expireTime,usp.price,
				sp.`name` servicePackName,sp.`desc` servicePackDesc,sp.pkg_pic_url servicePackPictrueUrl,sp.state servicePackState,a.name addressName
		from user_service_pack usp
		left join service_pack_condition spc on spc.id=usp.service_pack_id
		left join service_pack sp on sp.id=spc.service_pack_id
		left join address a on a.id=spc.address_id
		where usp.expire_time&gt;now()
		<if test="userId !=null">
			and usp.user_id=#{userId}
		</if>
		<if test="servicePackId !=null">
			and spc.id=#{servicePackId}
		</if>
		<if test="servicePack !=null">
			<if test="servicePack.packageTypeId !=null">
				and sp.package_type_id=#{servicePack.packageTypeId}
			</if>
		</if>
	</select>
</mapper>