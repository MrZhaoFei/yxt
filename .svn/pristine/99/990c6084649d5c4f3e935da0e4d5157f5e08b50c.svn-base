package org.system.controller.iface.sys;

import java.util.Map;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.sys.SysAbout;
import org.utils.spring.Groups;

@RequestMapping(value = { "/sysAbout" })
public interface ISysAboutController {

	/**
	 * @Title: getSysAboutList
	 * @Description: 查询系统相关内容
	 * @param sysAbout
	 * @param result
	 * @param token
	 * @return Map<String,Object>
	 */
	@RequestMapping(value = { "/sysAbouts" }, method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("sysAbout:list")
	public Map<String, Object> getSysAboutList(@Validated({ Groups.Select.class }) SysAbout sysAbout,
			BindingResult result, @RequestHeader(value = "token", required = false) String token);

	/**
	 * @Title: getSysAboutDetail
	 * @Description: 查询系统相关内容详情
	 * @param id
	 * @param sysAbout
	 * @param result
	 * @param token
	 * @return Map<String,Object>
	 */
	@RequestMapping(value = { "/sysAbout/{id}" }, method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("sysAbout:list")
	public Map<String, Object> getSysAboutDetail(@PathVariable("id") Integer id, SysAbout sysAbout,
			BindingResult result, @RequestHeader(value = "token", required = false) String token);
}
