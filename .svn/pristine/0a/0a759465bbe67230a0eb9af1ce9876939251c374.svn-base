package org.system.controller.iface;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.service.PackageService;
import org.utils.spring.Groups;

@RequestMapping("/admin")
public interface IPackageServiceController {
	

	/**
	 * 新增
	 * @param packageService
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/packageService/insert", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("packageService:insert")
	public Map<String, Object> insertPackageService(@Validated({ Groups.Insert.class }) PackageService packageService, BindingResult result);
	
	
	/**
	 * 所有的
	 * @param packageService
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/packageService", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("packageService:list")
	public Map<String, Object> getPackageServiceList(@Validated({ Groups.Select.class }) PackageService packageService, BindingResult result,HttpServletRequest req);
	
	

	/**
	 * 单个信息
	 * @param ID
	 * @param packageService
	 * @return
	 */
	@RequestMapping(value = "/packageService/{id}/detail", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("packageService:detail")
	public Map<String, Object> getPackageServiceDetail(@PathVariable("id") Integer id, PackageService packageService);
	
	

	/**
	 * 删除
	 * @param packageServiceId
	 * @param packageService
	 * @return
	 */
	@RequestMapping(value = "/packageService/{id}/delete", method = RequestMethod.DELETE)
	@ResponseBody
	@RequiresPermissions("packageService:delete")
	public  Map<String, Object> deletePackageService(@PathVariable("id") Integer id, PackageService packageService);
	
	
	/**
	 * 
	 * @param id
	 * @param packageService
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/packageService/{id}/update", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("packageService:update")
	public Map<String, Object> updatePackageService(@PathVariable("id") Integer id,
			@Validated({ Groups.Update.class }) PackageService packageService, BindingResult result);
	
	
	
	/**
	 * 根据优惠包id值得到所有的产品服务
	 * @param packageService
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/packageService/{id}", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("packageService:list")
	public  Map<String, Object> getPackageServiceByConditionIDList(@PathVariable("id") Integer id,@Validated({ Groups.Select.class }) PackageService packageService, BindingResult result);
	
}
