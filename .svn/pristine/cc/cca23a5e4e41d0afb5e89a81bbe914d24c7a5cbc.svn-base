package org.system.controller.iface.self;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.self.SelfTestAnswer;
import org.utils.spring.Groups;

@RequestMapping("/admin")
public interface ISelfTestAnswerController {
	
	/**
	 * 新增答案
	 * 
	 * @param selfTestAnswer
	 * @param result
	 * @return
	 */
	@RequestMapping(value = { "/selfTestAnswer" }, method = RequestMethod.POST)
	@ResponseBody
	public Map<String, Object> insertSelfTestAnswer(
			@Validated({ Groups.Insert.class }) SelfTestAnswer selfTestAnswer, BindingResult result);

	
	/**
	 * 修改答案
	 * 
	 * @param selfTestAnswerId
	 * @param selfTestAnswer
	 * @param result
	 * @return
	 */
	@RequestMapping(value = { "/selfTestAnswer/{selfId}" }, method = RequestMethod.PUT)
	@ResponseBody
	public Map<String, Object> updatetSelfTestAnswer(@PathVariable("selfId") Integer selfTestAnswerId,
			@Validated({ Groups.Update.class }) SelfTestAnswer selfTestAnswer, BindingResult result);
	
	
	/**
	 * 查询答案列表
	 * 
	 * @param selfTestAnswer
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/selfTestAnswers", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getSelfTestAnswerList(@Validated({ Groups.Select.class }) SelfTestAnswer selfTestAnswer, BindingResult result,HttpServletRequest req);
	
	/**
	 * 查询答案详情
	 * 
	 * @param selfTestAnswerId
	 * @param selfTestAnswer
	 * @param result
	 * @return
	 */
	
	@RequestMapping(value = "/selfTestAnswer/{selfId}", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getSelfTestAnswerDetail(@PathVariable("selfId") Integer selfTestAnswerId,SelfTestAnswer selfTestAnswer, BindingResult result);
	
	
	/**
	 * 删除
	 * @param id
	 * @param selfTestAnswer
	 * @return
	 */
	@RequestMapping(value = "/selfTestAnswer/{selfId}", method = RequestMethod.DELETE)
	@ResponseBody
	public  Map<String, Object> deleteSelfTestAnswer(@PathVariable("selfId") Integer selfTestAnswerId,SelfTestAnswer selfTestAnswer, BindingResult result);
	
}
