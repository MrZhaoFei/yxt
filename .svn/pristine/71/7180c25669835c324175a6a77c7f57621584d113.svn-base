package org.system.controller.iface.self;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.self.SelfTestTitle;
import org.utils.spring.Groups;

@RequestMapping("/admin")
public interface ISelfTestTitleController {
	
	/**
	 * 新增试卷
	 * 
	 * @param selfTestTitle
	 * @param result
	 * @return
	 */
	@RequestMapping(value = { "/selfTestTitle" }, method = RequestMethod.POST)
	@ResponseBody
	public Map<String, Object> insertSelfTestTitle(
			@Validated({ Groups.Insert.class }) SelfTestTitle selfTestTitle, BindingResult result);

	
	/**
	 * 修改试卷
	 * 
	 * @param allergicHistoryId
	 * @param selfTestTitle
	 * @param result
	 * @return
	 */
	@RequestMapping(value = { "/selfTestTitle/{selfId}" }, method = RequestMethod.PUT)
	@ResponseBody
	public Map<String, Object> updatetSelfTestTitle(@PathVariable("selfId") Integer selfTestTitleId,
			@Validated({ Groups.Update.class }) SelfTestTitle selfTestTitle, BindingResult result);
	
	
	/**
	 * 查询试卷列表
	 * @param selfTestTitle
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/selfTestTitles", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getSelfTestTitleList(@Validated({ Groups.Select.class }) SelfTestTitle selfTestTitle, BindingResult result,HttpServletRequest req);
	
	/**
	 * 查询试卷详情
	 * 
	 * @param selfTestTitle
	 * @param result
	 * @return
	 */
	
	@RequestMapping(value = "/selfTestTitle/{selfId}", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getSelfTestTitleDetail(@PathVariable("selfId") Integer selfTestTitleId,SelfTestTitle selfTestTitle, BindingResult result);
	
	
	
	/**
	 * 删除
	 * @param id
	 * @param selfTestTitle
	 * @return
	 */
	@RequestMapping(value = "/selfTestTitle/{selfId}", method = RequestMethod.DELETE)
	@ResponseBody
	public  Map<String, Object> deleteSelfTestTitle(@PathVariable("selfId") Integer selfTestTitleId,SelfTestTitle selfTestTitle, BindingResult result);
	
	
	
	@RequestMapping(value = "/selfTestTitleall/{id}", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getAllInformation(@PathVariable("id") Integer selfTestTitleId,SelfTestTitle selfTestTitle, BindingResult result);
	
	
	
	
}
