package org.system.controller.iface.service;

import java.util.Map;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.service.PackageType;
import org.utils.spring.Groups;

/**
 * @ClassName IPackageTypeController
 * @author <font color="red"><b>LiuMrLiu</b></font>
 * @date 2016年3月21日 上午11:08:04
 * @version 1.0
 * @description 服务包类型
 */
@RequestMapping(value = { "/common" })
public interface IPackageTypeController {

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param packageType
	 * @param result
	 * @return
	 * @date 2016年3月18日 下午5:30:14
	 * @version 1.0
	 * @description 新增服务包类型
	 */
	@RequestMapping(value = "/packageType", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("packageType:insert")
	public Map<String, Object> insertPackageType(@Validated({ Groups.Insert.class }) PackageType packageType,
			BindingResult result);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param packageTypeId
	 * @param packageType
	 * @param result
	 * @return
	 * @date 2016年3月18日 下午5:30:26
	 * @version 1.0
	 * @description 修改服务包类型
	 */
	@RequestMapping(value = "/packageType/{packageTypeId}", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("packageType:update")
	public Map<String, Object> updatePackageType(@PathVariable("packageTypeId") Integer packageTypeId,
			@Validated({ Groups.Update.class }) PackageType packageType, BindingResult result);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param packageType
	 * @return
	 * @date 2016年3月18日 下午5:30:38
	 * @version 1.0
	 * @description 服务包类型列表
	 */
	@RequestMapping(value = "/packageTypes", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("packageType:list")
	public Map<String, Object> getPackageTypeList(@Validated({ Groups.Select.class }) PackageType packageType,
			BindingResult result);

	/**
	 * @author <font color="green"><b>LiuGangQiang</b></font>
	 * @param packageTypeId
	 * @param packageType
	 * @return
	 * @date 2016年3月18日 下午5:30:48
	 * @version 1.0
	 * @description 服务包类型详情
	 */
	@RequestMapping(value = "/packageType/{packageTypeId}", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("packageType:detail")
	public Map<String, Object> getPackageTypeDetail(@PathVariable("packageTypeId") Integer packageTypeId,
			PackageType packageType);
}