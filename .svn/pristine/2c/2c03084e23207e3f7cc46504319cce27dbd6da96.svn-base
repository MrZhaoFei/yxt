package org.system.controller.impl.service.resp;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.core.result.ResultCode;
import org.core.result.ResultMap;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.validation.BindingResult;
import org.system.Global;
import org.system.controller.iface.service.resp.IServiceRespProcessInfoController;
import org.system.entity.service.resp.ServiceRespProcessInfo;
import org.system.message.Message;
import org.system.service.iface.service.resp.IServiceRespProcessInfoService;

@Controller
public class ServiceRespProcessInfoController implements IServiceRespProcessInfoController {
	Logger log = LoggerFactory.getLogger(ServiceRespProcessInfoController.class);
	@Resource
	private IServiceRespProcessInfoService serviceRespProcessInfoService;

	@Override
	public Map<String, Object> insertServiceRespProcessInfo(ServiceRespProcessInfo serviceRespProcessInfo, BindingResult result) {
		return null;
	}

	@Override
	public Map<String, Object> updateServiceRespProcessInfo(Integer serviceRespProcessInfoId, ServiceRespProcessInfo serviceRespProcessInfo, BindingResult result) {
		return null;
	}

	@Override
	public Map<String, Object> getServiceRespProcessInfoList(ServiceRespProcessInfo serviceRespProcessInfo, BindingResult result) {
		// 定义返回对象
		Map<String, Object> resultMap = new HashMap<>();
		// 得到返回数据
		List<Map<String, Object>> dataList = serviceRespProcessInfoService.getServiceRespProcessInfoList(serviceRespProcessInfo);
		if (dataList != null && dataList.size() > 0) {
			// 得到数据总数
			resultMap.put(Global.DATA_TOTAL, serviceRespProcessInfo.getTotal());
			resultMap.put(Global.DATA_ROWS, dataList);
			return ResultMap.convertMap(ResultCode.CODE_SUCCESS, resultMap, Message.bundle("query.success"));
		}
		return ResultMap.convertMap(ResultCode.CODE_DATA_EMPTY, Message.bundle("query.empty"));
	}

	@Override
	public Map<String, Object> getServiceRespProcessInfoDetail(Integer serviceRespProcessInfoId, ServiceRespProcessInfo serviceRespProcessInfo) {
		// 设置主键
		serviceRespProcessInfo.setId(serviceRespProcessInfoId);
		// 查询详情
		Map<String, Object> resultMap = serviceRespProcessInfoService.getServiceRespProcessInfoDetail(serviceRespProcessInfo);
		if (resultMap != null && resultMap.size() > 0) {
			return ResultMap.convertMap(ResultCode.CODE_SUCCESS, resultMap, Message.bundle("query.success"));
		}
		return ResultMap.convertMap(ResultCode.CODE_DATA_EMPTY, Message.bundle("query.empty"));
	}
}
