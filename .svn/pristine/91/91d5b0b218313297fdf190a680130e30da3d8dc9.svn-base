package org.system.service.impl.user;

import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;
import org.system.entity.user.UserDetail;
import org.system.mapper.user.UserDetailMapper;
import org.system.service.iface.user.IUserDetailService;

@Service
public class UserDetailService implements IUserDetailService {
	@Resource
	private UserDetailMapper mapper;

	@Override
	public Map<String, Object> getUserDetailById(UserDetail userDetail) {
		return mapper.queryOne(userDetail);
	}

	@Override
	public int insertUserDetail(UserDetail userDetail) {
		return mapper.insert(userDetail);
	}

	@Override
	public Map<String, Object> getUserDetailByFild(UserDetail userDetail) {
		return mapper.checkExists(userDetail);
	}

	@Override
	public int updateUserDetail(UserDetail userDetail) {
		return mapper.update(userDetail);
	}

	@Override
	public Map<String, Object> getPushInfo(UserDetail userDetail) {
		return mapper.getPushInfo(userDetail);
	}

