package org.system.controller.iface.contract;

import java.util.Map;

import org.core.annotation.RequiresPermissions;
import org.springframework.transaction.annotation.Transactional;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.contract.ContractFeedback;
import org.utils.spring.Groups;

/**
 * @ClassName: IContractFeedbackController
 * @Description: 签约反馈
 * @author: LiuGangQiang
 * @date: 2016年5月16日 上午10:45:36
 */
@RequestMapping(value = { "/user" })
public interface IContractFeedbackController {

	/**
	 * @Title: insertContractFeedback
	 * @Description: 新增签约反馈
	 * @param contractFeedback
	 * @param result
	 * @param token
	 * @return Map<String,Object>
	 */
	@RequestMapping(value = "/contractFeedback", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("contractFeedback:insert")
	@Transactional
	public Map<String, Object> insertContractFeedback(
			@Validated({ Groups.Insert.class }) ContractFeedback contractFeedback, BindingResult result,
			@RequestHeader(value = "token", required = false) String token);

	/**
	 * @Title: updateContractFeedback
	 * @Description: 修改签约反馈
	 * @param contractFeedbackId
	 * @param contractFeedback
	 * @param result
	 * @return Map<String,Object>
	 */
	@RequestMapping(value = "/contractFeedback/{contractFeedbackId}", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("contractFeedback:update")
	public Map<String, Object> updateContractFeedback(@PathVariable("contractFeedbackId") Integer contractFeedbackId,
			@Validated({ Groups.Update.class }) ContractFeedback contractFeedback, BindingResult result);

	/**
	 * @Title: getContractFeedbackList
	 * @Description: 签约反馈列表
	 * @param contractFeedback
	 * @param result
	 * @return Map<String,Object>
	 */
	@RequestMapping(value = "/contractFeedbacks", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("contractFeedback:list")
	public Map<String, Object> getContractFeedbackList(
			@Validated({ Groups.Select.class }) ContractFeedback contractFeedback, BindingResult result);

	/**
	 * @Title: getContractFeedbackDetail
	 * @Description: 签约反馈详情
	 * @param contractFeedbackId
	 * @param contractFeedback
	 * @return Map<String,Object>
	 */
	@RequestMapping(value = "/contractFeedback/{contractFeedbackId}", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("contractFeedback:detail")
	public Map<String, Object> getContractFeedbackDetail(@PathVariable("contractFeedbackId") Integer contractFeedbackId,
			ContractFeedback contractFeedback);
}