package org.system.controller.iface.about;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.about.SysAbout;
import org.utils.spring.Groups;

@RequestMapping("/admin")
public interface ISysAboutController {
    
	/**
	 * 新增
	 * @param sysAbout
	 * @param result
	 * @return
	 */
	@RequestMapping(value = { "/sysAbout/insert" }, method = RequestMethod.POST)
	@ResponseBody
	public Map<String, Object> insertSysAbout(
			@Validated({ Groups.Insert.class }) SysAbout sysAbout, BindingResult result);
	
	
	
	
	/**
	 * 修改
	 * @param id
	 * @param SysAbout
	 * @param result
	 * @return
	 */
	@RequestMapping(value = { "/sysAbout/{id}" }, method = RequestMethod.PUT)
	@ResponseBody
	public Map<String, Object> updatetSysAbout(@PathVariable("id") Integer id,
			@Validated({ Groups.Update.class }) SysAbout sysAbout, BindingResult result);
			
			
			
	/**
	 * 删除
	 * @param id
	 * @param sysAbout
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/sysAbout/{id}", method = RequestMethod.DELETE)
	@ResponseBody
	public  Map<String, Object> deleteContentType(@PathVariable("id") Integer id,SysAbout sysAbout, BindingResult result);		
			
	
	/**
	 * 查询所有
	 * @param SysAbout
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/sysAbout", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getSysAboutList(@Validated({ Groups.Select.class }) SysAbout sysAbout, BindingResult result,HttpServletRequest req);
	

	/**
	 * 查询详情
	 * @param id
	 * @param sysAbout
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/sysAbout/{id}", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> getSysAboutDetail(@PathVariable("id") Integer id,SysAbout sysAbout, BindingResult result);
	
	
}
