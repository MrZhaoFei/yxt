package org.system.controller.iface.doctor;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.core.annotation.RequiresPermissions;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.system.entity.doctor.Title;
import org.utils.spring.Groups;

@RequestMapping("/admin")
public interface ITitleController {
	
	
	/**
	 * 新增
	 * @param title
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/title/insert", method = RequestMethod.POST)
	@ResponseBody
	@RequiresPermissions("title:insert")
	public Map<String, Object> insertTitle(@Validated({ Groups.Insert.class }) Title title, BindingResult result);

	
	/**
	 * 修改
	 * @param id
	 * @param title
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/title/{id}/update", method = RequestMethod.PUT)
	@ResponseBody
	@RequiresPermissions("title:update")
	public Map<String, Object> updateTitle(@PathVariable("id") Integer id,
			@Validated({ Groups.Update.class }) Title title, BindingResult result);
	
	
	/**
	 * 所有的
	 * @param title
	 * @param result
	 * @return
	 */
	@RequestMapping(value = "/title", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("title:list")
	public Map<String, Object> getTitleList(@Validated({ Groups.Select.class }) Title title, BindingResult result,HttpServletRequest req);

	
	/**
	 * 单个信息
	 * @param diseaseId
	 * @param disease
	 * @return
	 */
	@RequestMapping(value = "/title/{id}", method = RequestMethod.GET)
	@ResponseBody
	@RequiresPermissions("title:detail")
	public Map<String, Object> getTitleDetail(@PathVariable("id") Integer id, Title title);
	
	
	/**
	 * 删除
	 * @param diseaseId
	 * @param disease
	 * @return
	 */
	@RequestMapping(value = "/title/{id}/delete", method = RequestMethod.DELETE)
	@ResponseBody
	@RequiresPermissions("title:delete")
	public  Map<String, Object> deleteTitle(@PathVariable("id") Integer id, Title title);
	


}
